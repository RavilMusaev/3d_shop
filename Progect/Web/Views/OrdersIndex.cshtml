@model IEnumerable<Domain.Entity.Orders>
<h2>Orders List</h2>
<table>
    <tr>
        <th>ID</th>
        <th>User ID</th>
        <th>Final Sum</th>
        <th>Status</th>
        <th>Order Date</th>
        <th>End Date</th>
        <th>Actions</th>
    </tr>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.Id_user</td>
            <td>@order.Final_sum</td>
            <td>@order.Status_orders</td>
            <td>@order.Date_order</td>
            <td>@order.Date_end</td>
            <td>
                <a href="@Url.Action("Details", new { id = order.Id })">Details</a> |
                <a href="@Url.Action("Edit", new { id = order.Id })">Edit</a> |
                <a href="@Url.Action("Delete", new { id = order.Id })">Delete</a>
            </td>
        </tr>
    }
</table>
<a href="@Url.Action("Create")">Create New Order</a>

