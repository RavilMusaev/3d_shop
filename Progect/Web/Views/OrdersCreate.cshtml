@model Domain.Entity.Orders
<h2>Create Order</h2>
<form asp-action="Create" method="post">
    <label>User ID:</label>
    <input asp-for="Id_user" required />
    <label>Final Sum:</label>
    <input asp-for="Final_sum" required />
    <label>Status:</label>
    <input asp-for="Status_orders" required />
    <label>Order Date:</label>
    <input asp-for="Date_order" required />
    <label>End Date:</label>
    <input asp-for="Date_end" required />
    <button type="submit">Create</button>
</form>
