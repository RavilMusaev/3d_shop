@model Domain.Entity.Orders
<h2>Delete Order</h2>
<p>Are you sure you want to delete this order?</p>
<p>ID: @Model.Id</p>
<p>User ID: @Model.Id_user</p>
<p>Final Sum: @Model.Final_sum</p>
<p>Status: @Model.Status_orders</p>
<p>Order Date: @Model.Date_order</p>
<p>End Date: @Model.Date_end</p>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Delete</button>
</form>
<a href="@Url.Action("Index")">Cancel</a>
